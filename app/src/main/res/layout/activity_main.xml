<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.puiyeetong.businesscard.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fish"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqua Aquarium Supplies"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: (123) 456-7890"
        android:layout_below="@id/name_text_view"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: 123 Fish Street, Fishland, CA 12345"
        android:layout_below="@id/phone_text_view"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:text="We Sell Aquarium Supplies" />
</RelativeLayout>
